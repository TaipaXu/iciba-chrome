{
    "manifest_version": 2,
    "name": "iciba",
    "version": "0.1.0",
    "default_locale": "en",
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "./assets/icons/icon_16.png",
        "48": "./assets/icons/icon_48.png",
        "128": "./assets/icons/icon_128.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": {
            "16": "./assets/icons/icon_16.png",
            "24": "./assets/icons/icon_24.png",
            "32": "./assets/icons/icon_32.png"
        },
        "default_title": "iCIBA",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": ["content.js"],
        "run_at": "document_idle"
    }],
    "options_page": "options.html",
    "options_ui": {
        "page": "options.html",
        "chrome_style": false
    },
    "permissions": [
        "contextMenus",
        "storage",
        "tabs",
        "downloads",
        "*://*.iciba.com/"
    ],
    "web_accessible_resources": [
        "fonts/*"
    ],
    "homepage_url": "https://github.com/TaipaXu/iciba-chrome"
}
